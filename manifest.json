{
    "name": "Doggofy",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Doggofy your page!",
    "browser_action": {
        "default_title": "Doggofy",
        "default_popup": "popup.html"
    },
    "content_scripts": [ 
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs"
    ]
}