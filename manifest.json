{
    "name": "GuardDog",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Guard your time.",
    "browser_action": {
        "default_title": "GuardDog",
        "default_popup": "popup.html"
    },
    "content_scripts": [ 
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "web_accessible_resources": [
        "images/somsom*.JPG",
        "images/dogIcon.png"
    ]
}